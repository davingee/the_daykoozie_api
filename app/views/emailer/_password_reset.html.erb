<table id="templateBody" border="0" cellpadding="0" cellspacing="0"width="600">
  <tbody>
    <tr>
      <td valign="top">
        <!-- // Begin Module: Standard Content \\ -->
        <br />
        <table border="0" cellpadding="20" cellspacing="0" width="100%">
          <tbody>
            <tr>
              <td class="bodyContent" valign="top">
                <div mc:edit="std_content00">
                  <h4 class="h4">Instructions for resetting your password</h4><br />
                  <strong>Hi <%= @user.name %>,</strong><br />

                  <br />
                  To reset your password, click the URL below.
                  <br />
                  
                  <br />
                  If you did not request your password to be reset, just ignore this email and your password will continue to stay the same.
                  
                    Sincerely yours,<br>
                    RumorSource
                  
                  <br />
                  <br />
                </div>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0pt;" align="center" valign=
              "top">
                <table class="templateButton" border="0" cellpadding=
                "15" cellspacing="0">
                  <tbody>
                    <tr>
                      <td class="templateButtonContent" valign=
                      "middle">
                        <div mc:edit="std_content01">
                          <%= link_to "Reset Password Link", "#{APP_CONFIG[:host]}reset_password/#{@user.password_reset_token}"  %>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table><!-- // End Module: Standard Content \\ -->
      </td>
    </tr>
  </tbody>
</table><!-- // End Template Body \\ -->
